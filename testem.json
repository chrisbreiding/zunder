{
  "src_files": [
    "src/**/*.coffee",
    "test/**/*.coffee"
  ],
  "serve_files": [
    "_testing/**/*.js"
  ],
  "before_tests": "coffee --compile --output _testing/src ./src; coffee --compile --output _testing/test ./test",
  "after_tests": "rm -rf _testing",
  "launch_in_dev": [
    "mocha"
  ],
  "launchers": {
    "mocha": {
      "command": "mocha --require _testing/test/common $(find _testing/test -name '*.js')"
    }
  }
}
