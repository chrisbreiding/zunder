{
  "src_files": [
    "src/scaffold/*",
    "src/**/*.coffee",
    "test/**/*.coffee"
  ],
  "serve_files": [
    "_testing/**/*.js"
  ],
  "before_tests": "./node_modules/.bin/coffee --compile --output _testing/src ./src; coffee --compile --output _testing/test ./test; cp -R ./src/scaffold _testing/src/",
  "on_exit": "rm -rf _testing",
  "launch_in_dev": [
    "mocha"
  ],
  "launchers": {
    "mocha": {
      "command": "./node_modules/.bin/mocha --require _testing/test/common $(find _testing/test -name '*.js')"
    }
  }
}
